<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="utf-8" />
    <link
      rel="icon"
      href="/public/img/logo-no-background.svg"
      type="image/x-icon"
    />
    <title>Present Meet</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"
    />
    <link rel="stylesheet" href="css/register.css" />
    <link rel="stylesheet" href="css/errors.css" />
  </head>
  <body>
    <main>
      <div class="card">
        <%- include('partials/title') %>
        <div class="intro"><h3>Register</h3></div>
        <%- include('partials/messages') %>
        <form action="/register" id="user-info" method="post">
          <div class="form-group">
            <label for="first_name">First Name</label>
            <input
              type="text"
              name="first_name"
              id="first_name"
              value="<%= typeof first_name != 'undefined' ? first_name : '' %>"
              required
              autocomplete="off"
            />
          </div>
          <div class="form-group">
            <label for="middle_name">Middle Name</label>
            <input
              type="text"
              name="middle_name"
              id="middle_name"
              value="<%= typeof middle_name != 'undefined' ? middle_name : '' %>"
              autocomplete="off"
            />
          </div>
          <div class="form-group">
            <label for="last_name">Last Name</label>
            <input
              type="text"
              name="last_name"
              id="last_name"
              value="<%= typeof last_name != 'undefined' ? last_name : '' %>"
              required
              autocomplete="off"
            />
          </div>
          <div class="form-group">
            <label for="birthday">Birthday</label>
            <input
              type="date"
              name="birthday"
              id="birthday"
              min="1950-01-01"
              max="2013-12-31"
              value="<%= typeof birthday != 'undefined' ? birthday : '' %>"
              required
              autocomplete="off"
            />
          </div>
          <div class="form-group">
            <label for="type">User type</label>
            <select name="type" id="user-type" required>
              <option value="" selected disabled hidden>
                Please Choose an Account Type
              </option>
              <option value="student">Student</option>
              <option value="teacher">Teacher</option>
            </select>
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              name="email"
              id="email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
              autocomplete="off"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
              required
              autocomplete="off"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              name="password2"
              id="password2"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
              required
              autocomplete="off"
            />
          </div>
          <button class="button" type="submit" id="submit-btn">Submit</button>
        </form>
        <div class="footer">
          <p>Have an account? <a href="/login">Login</a></p>
        </div>
      </div>
    </main>
    <script>
      document.getElementById(
        'user-type'
      ).value = `<%= typeof type != 'undefined' ? type : '' %>`;
    </script>
  </body>
</html>
