<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="icon"
      href="/public/img/logo-no-background.svg"
      type="image/x-icon"
    />
    <title>Present Meet</title>
    <link rel="stylesheet" href="css/room.css" />
    <link rel="stylesheet" href="css/icon.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script
      defer
      src="https://cdn.sheetjs.com/xlsx-0.19.0/package/dist/xlsx.full.min.js"
    ></script>
    <script
      defer
      type="text/javascript"
      src="javascript/AgoraSDK/AgoraRTC_N-4.13.0.js"
    ></script>
    <script
      defer
      type="text/javascript"
      src="javascript/AgoraSDK/agora-rtm-sdk-1.5.0.js"
    ></script>
    <script defer src="javascript/FaceApi/face-api.js"></script>
    <script defer src="javascript/FaceApi/face-api.min.js"></script>
    <script type="module" src="javascript/room/controller.js"></script>
  </head>
  <body>
    <div class="svg_spinner" id="room_loader"></div>
    <div class="streams">
      <section id="stream__container">
        <div id="stream__box"></div>
        <div id="streams__container">
          <!-- <div class="video__container" id="user-container-232">
              <div class="video-player" id="user-12323">1</div>
            </div> -->
        </div>
      </section>
    </div>
    <section id="messages__container" style="display: none">
      <div id="messages"></div>
      <form id="message__form">
        <input
          type="text"
          name="message"
          placeholder="Send a message...."
          autocomplete="off"
        />
      </form>
    </section>
    <section id="members__container" style="display: block">
      <div id="members__header">
        <p>Participants</p>
        <strong id="members__count">0</strong>
      </div>
      <div id="member__list"></div>
    </section>

    <div class="footerBtn">
      <div class="videoLink">
        <!-- Button for copying the room ID -->
        <button class="icon copy" id="link-btn" type="button"></button>
        <!-- Left side for the ink of the room -->
        <p class="link"></p>
      </div>
      <!-- Main Button at middle-->
      <div class="middleBtn">
        <button class="button" id="mic-btn">
          <i class="fa-solid fa-microphone"></i>
        </button>
        <button class="button" id="camera-btn">
          <i class="fa-solid fa-video"></i>
        </button>
        <button class="button" id="screen-btn">
          <i class="fa-solid fa-desktop"></i>
        </button>
        <!-- <button class="button" id="raise-hand">
          <i class="fa-solid fa-hand"></i>
        </button> -->
        <button class="button" id="leave-btn">
          <i class="fa-solid fa-phone"></i>
        </button>
      </div>
      <!-- Right side button for messaging and the participants list -->
      <div class="rightBtn">
        <button class="button gear active" id="settings-btn"></button>
        <button class="button user active" id="users-btn"></button>
        <button class="button envelope" id="chat-btn">
          <div class="" id="notification_msg"></div>
        </button>
      </div>
      <!-- Joining stream -->
      <div class="mainBtn">
        <button id="join-btn">Join Stream</button>
        <!-- Leaving Stream -->
        <button onclick="location.href='/quit'" type="button" id="quit-btn">
          Quit Room
        </button>
      </div>
    </div>
  </body>
</html>
